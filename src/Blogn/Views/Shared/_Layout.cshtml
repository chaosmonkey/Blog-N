                            <a class="nav-link dropdown-toggle "
                               href="#"
                               id="accountMenuItem"
                               role="button"
                               data-toggle="dropdown"
                               aria-haspopup="true"
                               aria-expanded="false">
                                <avatar for-principal="@User" size="20" class="avatar-menu avatar-circle-20" />
                            </a>
                            <div class="dropdown-menu dropdown-menu-right" aria-labelledby="accountMenuItem">
                                <a class="dropdown-item" for-authenticated="true" asp-controller="Account" asp-action="Index" with-return-url>My Account</a>
                                <a class="dropdown-item" for-authenticated="false" asp-controller="Account" asp-action="SignIn" with-return-url>Sign In</a>
                                <div class="dropdown-divider"></div>
                                <a class="dropdown-item" for-authenticated="false" asp-controller="Account" asp-action="Register" with-return-url>Register</a>
                                <a class="dropdown-item" for-authenticated="true" asp-controller="Account" asp-action="SignOut" with-return-url>Sign Out</a>
                            </div>
                        </li>*@
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>
    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2019 - Blog-n - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script src="~/lib/jquery/jquery.min.js"></script>
    <script src="~/lib/bootstrap/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>
