@model ForgotPasswordModel
@{
    ViewData[ViewKey.Title] = "Forgot Password";
}
<div class="row">
    <div class="col-12">
        <div>
            <h1>Forgot Password</h1>
        </div>
        <div class="pt-3">
            <p>
                To reset your password please follow the steps below:
            </p>
            <ol>
                <li>Enter your email address.</li>
                <li>Click the "Send Link" button.</li>
                <li>Check your email for a message with the subject "Account Reset Request".</li>
                <li>
                    When the message arrives, follow the link.
                    <ul><li><em>If you do not see the email within a few minutes, check your junk email folder(s)!</em></li></ul>
                </li>
                <li>Follow the instructions on the page to reset your password.</li>
            </ol>
        </div>
    </div>
    <div class="col-lg-4 col-md-6 col-sm-8 pt-3">
        <form asp-action="ForgotPassword" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger validation-no-bullets"></div>
            <div class="form-group">
                <input asp-for="Email" class="form-control" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
            <div class="form-group pt-3">
                <button type="submit" class="btn btn-primary btn-block">Send Link</button>
            </div>
        </form>
        <div class="text-center p-3">
            <a asp-controller="Account" asp-action="SignIn">Return to Sign In</a>
        </div>
    </div>
</div>
@section Scripts{
    <partial name="_ValidationScriptsPartial" />
}