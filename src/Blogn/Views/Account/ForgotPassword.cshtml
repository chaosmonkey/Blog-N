@model ForgotPasswordModel
@{
    ViewData[ViewKey.Title] = "Forgot Password";
}
<div class="row">
    <div class="col-lg-4 col-md-6 col-sm-8 offset-lg-4 offset-md-3 offset-sm-2">
        <div>
            <h1 class="text-center">Forgot Password</h1>
            <p>
                Enter your email address below and click the "Reset Password" button.
                If your email address is found, a link will be emailed to you to reset your password.
            </p>
        </div>
        <form asp-action="ForgotPassword" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger validation-no-bullets"></div>
            <div class="form-group">
                <input asp-for="Email" class="form-control" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
            <button type="submit" class="btn btn-primary btn-block">Send Link</button>
        </form>
        <div class="text-center p-4">
            <a asp-controller="Account" asp-action="SignIn">Return to Sign In</a>
        </div>
    </div>
</div>
@section Scripts{
    <partial name="_ValidationScriptsPartial" />
}